*
    margin: 0;
    padding: 0;
    box-sizing: border-box;

html 
    font-family: Source Sans Pro;


#header
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #EEEEEE;
    border-radius: 0px 0px 1px 0px;

#header>.links
    display: none;

#header a
    text-decoration: none;

@media (min-width: 400px){
  #header {
    background: blue;
  }
}
    
.links_item a
        text-decoration: none;

.main_title a
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    padding-left: 20px;
    letter-spacing: 2.8px;
    color: #3C3B3B;

.main> div> .menu> a
    padding: 20px 25px;
    color: #AAAAAA;
    border: 1px solid #EEEEEE;


.post 
    background-color: #fff;
    text-align: center;
    margin: 40px 0;

.post .header
    padding: 73px 0 51px 0;
    text-transform: uppercase;

.post .title
    text-align: center;
    padding: 0 66px;
    letter-spacing: 3.92px;

.secondary_title
    margin-bottom: 20px;

.secondary_title  a 
    font-size: 20px;
    font-weight: bold;
    color: #3C3B3B;
    letter-spacing: 6.6px;
    text-decoration none;
    padding-bottom: 20px;

.post .title .paragraph 
    font-size: 14px;
    color: #8E8E8E;
    margin-top: 20px;

.meta 
    display: flex;
    flex-direction: column;
    font-size: 14px;
    margin-top: 30px;
    padding: 0 90px;

.meta>.published
    font-weight: bold;
    letter-spacing: 1.68px;
    color: #3C3B3B;

.meta>.author
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding-top: 15px;

.meta>.author>.name
    font-size: 12px;
    color: #8E8E8E;
    letter-spacing: 1.68px;

.post>.paragraph
    font-size: 16px;
    color: #3C3B3B;
    text-align: left;
    padding: 40px 16px;
    letter-spacing: 1.28px;
    line-height: 1.5;

.post>.footer
    padding: 20px 0 70px 0;


.pagination> span 
    margin: 30px 0;



.mini-post
    display: flex;
    flex-wrap: wrap-reverse;
    margin: 30px 0 0;
    text-transform: uppercase;

.mini-post>.header
    background: #fff;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 30px 30px 25px;
    width: 100vw;

.mini-post>.header>.tertiary_title  a 
    font-size: 14px;
    color: #3C3B3B;
    letter-spacing: 3.92px;
    text-decoration: none;
    padding-bottom: 20px;

.mini-post>.header>.published
    font-size: 12px;
    color: #808080;
    letter-spacing: 1.44px;
    padding-top: 5px;

.mini-post>.header>.author
    position: absolute;
    display: flex;
    right: 30px;
    top: 33px;



.posts 
    text-transform: uppercase;

.posts>.header>.tertiary_title> a
    font-weight: bold;

.posts> span> div
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
    padding: 30px 0;
    border: 1px solid #E1E1E1;

.posts> span> div> a> img
    width: 70px;

.posts> span> div>.header
    padding-left: 30px;
    display: flex;
    flex-direction: column;

.posts> span> div>.header>.tertiary_title a 
    text-decoration: none;
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 3.36px;
    color: #3C3B3B;

.posts> span> div>.header>.published
    font-size: 12px;
    letter-spacing: 1.44px;
    color: #808080;
    padding-top: 10px;

.blurb
    padding: 30px 20px 70px 20px;

.blurb>.secondary_title
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 3.84px;
    color: #3C3B3B;
    text-transform: uppercase;

.blurb>.paragraph
    margin: 30px 0 85px;
    letter-spacing: 0px;
    line-height: 1.8;
    color: #808080;