*
    margin: 0;
    padding: 0;
    box-sizing: border-box;

html 
    font-family: Source Sans Pro;

#wrapper
    background: #F4F4F4;

#header
    background: #fff;

@media (min-width: 400px){
  #header {
    background: blue;
  }
}
    
.links_item a
        text-decoration: none;

.main_title
    font-weight: bold;
    text-transform: uppercase;
    padding: 4px;
    text-decoration: none;

.post 
    background-color: #fff;
    text-align: center;
    margin: 50px 0;

.post .header
    padding: 73px 0 51px 0;
    text-transform: uppercase;

.post .title
    text-align: center;
    padding: 0 66px;
    letter-spacing: 3.92px;

.secondary_title
    margin-bottom: 20px;

.secondary_title  a 
    font-size: 20px;
    font-weight: bold;
    color: #3C3B3B;
    letter-spacing: 6.6px;
    text-decoration none;
    padding-bottom: 20px;

.post .title .paragraph 
    font-size: 14px;
    color: #8E8E8E;
    margin-top: 20px;

.meta 
    display: flex;
    flex-direction: column;
    font-size: 14px;
    margin-top: 30px;
    padding: 0 90px;

.meta>.published
    font-weight: bold;
    letter-spacing: 1.68px;

.meta>.author
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding-top: 15px;

.post>.paragraph
    font-size: 16px;
    color: #3C3B3B;
    text-align: left;
    padding: 40px 16px;
    letter-spacing: 1.28px;
    line-height: 1.5;

.post>.footer
    padding: 20px 0 70px 0;


.pagination> span 
    margin: 30px 0;


.mini-post
    display: flex;
    flex-wrap: wrap-reverse;
    margin: 30px 0;
    text-transform: uppercase;

.mini-post>.header
    background: #fff;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 30px 30px 20px;
    width: 100vw;

.tertiary_title  a 
    font-size: 14px;
    color: #3C3B3B;
    letter-spacing: 3.92px;
    text-decoration: none;
    padding-bottom: 20px;

.mini-post>.header>.published
    font-size: 12px;
    color: #808080;
    letter-spacing: 1.44px;
    padding-top: 5px;

.mini-post>.header>.author
    position: absolute;
    display: flex;
    right: 30px;
    top: 33px;